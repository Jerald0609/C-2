using System;
using System.Collections.Generic;

class Program
{
    static void Main()
    {
        List<string> originalWords = new List<string>();
        List<string> modifiedWords = new List<string>();

        Console.Write("How many words do you want to enter? ");
        int count = int.Parse(Console.ReadLine());

        for (int i = 0; i < count; i++)
        {
            Console.Write($"Enter word {i + 1}: ");
            string word = Console.ReadLine();
            originalWords.Add(word);

            string modified = "";
            foreach (char c in word)
            {
                if ("aeiouAEIOU".Contains(c))
                    modified += "*";
                else
                    modified += c;
            }

            modifiedWords.Add(modified);
        }

        Console.WriteLine("\nOriginal  |  Modified");
        Console.WriteLine("----------------------");
        for (int i = 0; i < originalWords.Count; i++)
        {
            Console.WriteLine($"{originalWords[i],-9} |  {modifiedWords[i]}");
        }
    }
}
