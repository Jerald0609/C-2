using System;
using System.Collections.Generic;

class Program
{
    static void Main()
    {
        List<string> names = new List<string>();
        List<int> scores = new List<int>();

        // Collect 10 student names and scores
        for (int i = 0; i < 10; i++)
        {
            Console.Write($"Enter name of student {i + 1}: ");
            names.Add(Console.ReadLine());

            Console.Write($"Enter score for {names[i]}: ");
            scores.Add(int.Parse(Console.ReadLine()));
        }

        // Create a combined list of name-score pairs
        List<(string Name, int Score)> students = new List<(string, int)>();
        for (int i = 0; i < names.Count; i++)
        {
            students.Add((names[i], scores[i]));
        }

        // Sort by score in descending order
        students.Sort((a, b) => b.Score.CompareTo(a.Score));

        // Display top 3 performers
        Console.WriteLine("\nTop 3 Performers:");
        for (int i = 0; i < 3; i++)
        {
            Console.WriteLine($"{i + 1}. {students[i].Name} - {students[i].Score}");
        }
    }
}
