using System;
using System.Collections.Generic;

class Program
{
    static void Main()
    {
        List<string> names = new();
        string input;
        while (true)
        {
            Console.Write("Enter name (done to stop): ");
            input = Console.ReadLine();
            if (input.ToLower() == "done") break;
            names.Add(input.ToUpper());
        }

        int countA = 0;
        Console.WriteLine("\nNames in uppercase:");
        foreach (var name in names)
        {
            Console.WriteLine(name);
            if (name.StartsWith("A")) countA++;
        }
        Console.WriteLine($"\nNames starting with 'A': {countA}");
    }
}
