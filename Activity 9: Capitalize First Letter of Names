using System;
using System.Collections.Generic;

class Program
{
    static void Main()
    {
        List<string> names = new List<string>();

        Console.WriteLine("Enter 6 full names:");
        for (int i = 0; i < 6; i++)
        {
            string input = Console.ReadLine().Trim();
            string[] parts = input.Split(' ', StringSplitOptions.RemoveEmptyEntries);

            for (int j = 0; j < parts.Length; j++)
            {
                string word = parts[j].ToLower();
                parts[j] = char.ToUpper(word[0]) + word.Substring(1);
            }

            string formattedName = string.Join(" ", parts);
            names.Add(formattedName);
        }

        Console.WriteLine("\nFormatted Names:");
        foreach (string name in names)
        {
            Console.WriteLine(name);
        }
    }
}
